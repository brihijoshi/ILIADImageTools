#:kivy 1.1.0
Root:
    image: image

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
        BoxLayout:
            Image:
                id: image
                source: ''
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SendData>:
    size_hint: (0.1,0.1)
    Button:
        pos: 100,100
        text: "SendData"
        color: 1,0,0,1
        on_press: print('Workinggg!')

